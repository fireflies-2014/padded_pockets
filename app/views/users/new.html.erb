<h1> Sign in </h1>
<% if flash[:error] %>
  <%= flash[:error] %>
<% end %>

<%= form_for @user do |f| %>

<p>
  <%= f.label :username %><br>
  <%= f.text_field :username %>
</p>

<p>
  <%= f.label :email %><br>
  <%= f.text_field :email %>
</p>

<p>
  <%= f.label :password %><br>
  <%= f.password_field :password %>
</p>
<p>
    <%= f.submit "Sign up" %>
</p>
<% end %>
