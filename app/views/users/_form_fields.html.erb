<% if flash[:error] %>
  <%= flash[:error] %>
<% end %>

<%= form_for @user do |f| %>

<p>
  <%= f.label :username %><br>
  <%= f.text_field :username %>
</p>

<p>
  <%= f.label :email %><br>
  <%= f.text_field :email %>
</p>

<p>
  <%= f.label :password %><br>
  <%= f.password_field :password %>
</p>

<p>
  <%= f.label :bio %><br>
  <%= f.text_area :bio %>
</p>

<p>
  <%= f.label :party %><br>
  <%= f.text_field :party %>
</p>

<p>
    <%= f.submit %>
</p>
<% end %>
